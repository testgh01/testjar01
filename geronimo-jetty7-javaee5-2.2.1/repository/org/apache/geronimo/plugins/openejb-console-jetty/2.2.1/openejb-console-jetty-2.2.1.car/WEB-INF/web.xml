    <servlet-mapping>
        <servlet-name>jsp.WEB_002dINF.view.ejbserver.view_jsp</servlet-name>
        <url-pattern>/WEB-INF/view/ejbserver/view.jsp</url-pattern>
    </servlet-mapping>

